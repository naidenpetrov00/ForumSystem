@model ForumSystem.Web.ViewModels.Weather.WeatherModel
<div class="padding">
    <div class="col-lg-6">
        <div class="card">
            <div style="height:110px;">
                <h3 class="card-title m-b-0 dl" id="name">City</h3> 
                <p class="card-text font-light" id="date">Date</p>
                <p class="card-text font-light" id="time">Time</p>
            </div>
            <div class="card-body weather-small">
                <div class="row">
                    <div class="col-8 b-r align-self-center">
                        <div class="d-flex">
                            <div class="display-6 text-info"><i class="mdi mdi-weather-pouring"></i></div>
                            <div class="m-l-20">
                                <h1 class="font-light text-info m-b-0" id="temp">temp<sup>0</sup></h1> 
                                <small id="weather">temp</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        getWeather('@Model.ApiKey');
    });
</script>
